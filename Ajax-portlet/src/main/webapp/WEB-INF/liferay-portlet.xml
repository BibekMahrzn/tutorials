<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>alloy-send-data</portlet-name>
		<icon>/icon.png</icon>
		<!-- Set this property to false to allow using Ajax -->
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>alloy-send-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>alloy-submit-form</portlet-name>
		<icon>/icon.png</icon>
		<!-- Set this property to false to allow using Ajax -->
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>submit-form-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>jquery-send-data</portlet-name>
		<icon>/icon.png</icon>
		<!-- Set this property to false to allow using Ajax -->
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>jquery-send-data-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>jquery-submit-form</portlet-name>
		<icon>/icon.png</icon>
		<!-- Set this property to false to allow using Ajax -->
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			jquery-submit-form-portlet
		</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>